{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "eu_central_1_ami": "ami-090f10efc254eaf55",
    "name": "docker-ce-base",
    "eu_central_1_name": "ubuntu-bionic-docker-ce-base",
    "ssh_username": "ubuntu"
  },
  "builders": [
    {
      "name": "{{user `eu_central_1_name`}}",
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "eu-central-1",
      "vpc_id": "",
      "subnet_id": "",
      "source_ami": "{{user `eu_central_1_ami`}}",
      "instance_type": "t2.micro",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_timeout": "5m",
      "ami_name": "{{user `eu_central_1_name`}} {{timestamp}}",
      "ami_description": "{{user `eu_central_1_name`}} AMI",
      "run_tags": {
        "ami-create": "{{user `eu_central_1_name`}}"
      },
      "tags": {
        "ami": "{{user `eu_central_1_name`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "bootstrap_docker_ce.sh",
      "destination": "/tmp/bootstrap_docker_ce.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'packer' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "inline": [
        "whoami",
        "cd /tmp",
        "chmod +x bootstrap_docker_ce.sh",
        "ls -alh /tmp",
        "./bootstrap_docker_ce.sh"
      ]
    }
  ]
}